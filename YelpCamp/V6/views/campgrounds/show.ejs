<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <dv class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </dv>
        </div>
        <div class="col-md-9">
            <div class="card mb-3">
                <!--css img-thumbnail-->
                <img class="card-img-top"  src="<%= campground.image %>" width="100%">
                <!--css img-fluid mx-auto d-block -->
                <!--css style="width:100%"-->
                <div class="card-body">
                    <h5 class="float-right">Â£9.00/night</h5>
                    <h5 class="card-title"><a href=""><%= campground.name %></a></h5>
                    <p class="card-text"><%= campground.description %></p>

                </div>
            </div>
            <div class="card card-body bg-light mb-3">
                <div class="float-right text-right">
                        <a class="btn btn-info btn-sm" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author %></strong>
                            <span class="float-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>


<% include ../partials/footer %>
